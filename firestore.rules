rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic rule: users can only read/write their own data based on userId field
    match /tasks/{taskId} {
      // For existing docs, check resource data
      allow read, update, delete: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      // For new docs, check request data
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // User settings and profile are restricted by the document ID (which is the UID)
    match /users/{userId} {
      allow read, write: if request.auth != null && userId == request.auth.uid;
      
      match /settings/{settingId} {
        allow read, write: if request.auth != null && userId == request.auth.uid;
      }
    }
  }
}
